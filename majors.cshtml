@{
    Layout = "~/_xuejiLayout.cshtml";
    var db = Database.Open("StarterSite");
    if (Session["name"] == null)
    {
        Response.Redirect("~/login.cshtml");
    }
    var list = "select *from majors";
}
<a class="btn btn-info" href="~/addmajors.cshtml">新增专业</a>
<table class="table table-striped table-bordered table-hover bootstrap-datatable datatable">
    <tr class="t">
        <th>专业ID</th>
        <th>专业名称</th>
        <th>操作</th>
    </tr>
    @foreach(var row in db.Query(list))
    {
        <tr class="t">
            <td class="center">@row.id</td>
            <td class="center"><a href="~/editmajors.cshtml?id=@row.id">@row.majors_name</a></td>
            <td class="center"><a class="btn btn-danger" href="~/delmajors.cshtml?id=@row.id">删除</a></td>
        </tr>
    }
</table>